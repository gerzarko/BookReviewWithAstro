---
const items: {
  title: string;
  path: string;
}[] = [
  {
    title: "My Last Review",
    path: "/mylastreview",
  },
  {
    title: "Reviews",
    path: "/allreviews",
  },
  {
    title: "About me",
    path: "/aboutme",
  },
];
---

<nav class="bg-slate-600 text-white items-center">
  <div class="flex flex-row">
    <a class="mr-4 ml-10 p-2" href="/"
      ><img src="../../public/bookIcon.svg" alt="web icon" class="w-10" /></a
    >

    <ul class="flex flex-row ml-auto">
      {
        items.map((item) => (
          <li class="p-4 block hover:bg-slate-300">
            <a href={item.path}>{item.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
