---
const items: {
  title: string;
  path: string;
}[] = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "My Last Review",
    path: "/mylastreview",
  },
  {
    title: "Reviews",
    path: "/allreviews",
  },
  {
    title: "About me",
    path: "/aboutme",
  },
];
---

<nav class="sticky">
  <a class="block w-1/3 m-auto p-2 text-center" href="/"
    ><h1 class="text-4xl text-blue-500 py-8">THE ALEPH</h1></a
  >
  <hr />
  <div class="flex flex-row border-y solid border-gray-300 mb-16">
    <ul class="flex w-4/5 m-auto flex-row place-content-between">
      {
        items.map((item) => (
          <li class="text-lg  p-4 block hover:text-gray-500">
            <a href={item.path}>{item.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
